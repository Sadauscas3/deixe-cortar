generator client {
  provider = "prisma-client-js"
  url = env("DATABASE_URL")
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barbershop {
id Int @id @default(autoincrement())
name String
address String
phone String
email String @unique
active Boolean
employee_limit Int
createAt DateTime @default(now())
updatedAt DateTime @updatedAt



}